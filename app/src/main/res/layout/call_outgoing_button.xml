<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:layout_marginBottom="70dp"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/volume"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/call_image"
        android:padding="10dp"
        android:layout_marginLeft="25dp"
        android:onClick="speaker"
        android:foregroundGravity="center_horizontal"
        android:src="@drawable/baseline_volume_up_white_18dp"/>
    <ImageView
        android:id="@+id/hang_up"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/hangup"
        android:padding="10dp"
        android:onClick="hang_up"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:src="@drawable/ic_call_end_black_24dp"/>

    <ImageView
        android:id="@+id/mute"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/call_image"
        android:onClick="mic"
        android:padding="10dp"
        android:src="@drawable/baseline_mic_white_18dp" />

</LinearLayout>